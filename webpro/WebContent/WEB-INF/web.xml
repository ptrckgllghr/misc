<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>webpro</display-name>
  <servlet>
    <description></description>
    <display-name>Hello</display-name>
    <servlet-name>Hello</servlet-name>
    <servlet-class>cc.mv.web.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/Hello.pjg</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CurrencyConverter</display-name>
    <servlet-name>CurrencyConverter</servlet-name>
    <servlet-class>cc.mv.web.CurrencyConverterServlet</servlet-class>
    <init-param>
    	<param-name>DOLLAR</param-name>
    	<param-value>62.50</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>CurrencyConverter</servlet-name>
    <url-pattern>/CurrencyConverter.do</url-pattern>
  </servlet-mapping>
  <resource-ref>
  <res-ref-name>jdbc/myds</res-ref-name>
  <res-type>javax.sql.DataSource</res-type>
  <res-auth>Container</res-auth>
  </resource-ref>
</web-app>